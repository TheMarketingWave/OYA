<section
  id="{{ section.id }}"
  class="page-section-wrapper"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="page-content">
    <div class="page-container page-container--{{ section.settings.content_width }}">
      {% if section.settings.show_title and page.title %}
        <h1 class="page-title title-font">{{ page.title }}</h1>
      {% endif %}

      {% if page.content %}
        <div class="page-text">
          {{ page.content }}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .page-section-wrapper {
    width: 100%;
    background-color: var(--color-brand-brown);
  }

  .page-content {
    margin: 0 auto;
  }

  .page-container {
    margin: 0 auto;
    padding: 0 48px;
  }

  .page-container--narrow {
    max-width: 800px;
  }

  .page-container--medium {
    max-width: 1000px;
  }

  .page-container--wide {
    max-width: 1200px;
  }

  .page-title {
    font-size: var(--font-size-large);
    font-weight: 600;
    color: var(--color-brand-cream);
    margin-bottom: 40px;
    line-height: 1.2;
    text-align: center;
  }

  .page-text {
    color: var(--color-brand-cream);
    font-size: 16px;
    line-height: 1.6;
  }

  /* Style page content elements */
  .page-text h1,
  .page-text h2,
  .page-text h3,
  .page-text h4,
  .page-text h5,
  .page-text h6 {
    color: var(--color-brand-cream);
    margin-bottom: 20px;
    margin-top: 32px;
    line-height: 1.3;
  }

  .page-text h1 {
    font-size: 32px;
    font-weight: 600;
  }
  .page-text h2 {
    font-size: 28px;
    font-weight: 600;
  }
  .page-text h3 {
    font-size: 24px;
    font-weight: 600;
  }
  .page-text h4 {
    font-size: 20px;
    font-weight: 600;
  }
  .page-text h5 {
    font-size: 18px;
    font-weight: 600;
  }
  .page-text h6 {
    font-size: 16px;
    font-weight: 600;
  }

  .page-text p {
    margin-bottom: 20px;
    color: var(--color-brand-cream);
  }

  .page-text ul,
  .page-text ol {
    margin-bottom: 20px;
    padding-left: 24px;
    color: var(--color-brand-cream);
  }

  .page-text li {
    margin-bottom: 8px;
  }

  .page-text strong {
    color: var(--color-brand-green);
    font-weight: 600;
  }

  .page-text a {
    color: var(--color-brand-green);
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .page-text a:hover {
    color: var(--color-brand-orange);
  }

  .page-text blockquote {
    border-left: 4px solid var(--color-brand-green);
    padding-left: 20px;
    margin: 24px 0;
    font-style: italic;
    color: var(--color-brand-cream);
  }

  .page-text hr {
    border: none;
    height: 1px;
    background: rgba(224, 217, 186, 0.2);
    margin: 32px 0;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .page-container {
      padding: 0 20px;
    }

    .page-title {
      font-size: 28px;
      margin-bottom: 24px;
    }

    .page-text {
      font-size: 14px;
    }

    .page-text h1 {
      font-size: 24px;
    }
    .page-text h2 {
      font-size: 22px;
    }
    .page-text h3 {
      font-size: 20px;
    }
    .page-text h4 {
      font-size: 18px;
    }
    .page-text h5 {
      font-size: 16px;
    }
    .page-text h6 {
      font-size: 14px;
    }
  }
</style>
{% schema %}
{
  "name": "Page",
  "settings": [
    {
      "type": "header",
      "content": "Page Settings"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show page title",
      "default": true
    },
    {
      "type": "select",
      "id": "content_width",
      "label": "Content width",
      "options": [
        {
          "value": "narrow",
          "label": "Narrow"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "wide",
          "label": "Wide"
        }
      ],
      "default": "medium"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ]
}
{% endschema %}
