{% style %}
  .journal-page {
    color: var(--color-brand-cream);
    min-height: 100vh;
    padding: 40px 20px;
  }

  .journal-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .journal-header {
    text-align: left;
    margin-bottom: 48px;
  }

  .journal-title {
    font-size: 40px;
    font-weight: bold;
    margin-bottom: 10px;
    font-family: 'Playfair Display', serif;
  }

  .journal-subtitle {
    font-size: 16px;
  }

  .journal-featured {
    display: flex;
    gap: 24px;
    margin-bottom: 48px;
  }

  .journal-featured__image {
    flex: 1;
    aspect-ratio: 16/9;
    overflow: hidden;
    border-radius: 4px;
  }

  .journal-featured__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .journal-featured__content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .journal-featured__title {
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 20px;
    font-family: 'Playfair Display', serif;
  }

  .journal-featured__meta {
    font-size: 14px;
    margin-bottom: 30px;
  }

  .journal-featured__excerpt {
    font-size: 14px;
  }

  .journal-featured__read-more {
    margin-top: auto;
    align-self: flex-start;
    min-width: 150px;
  }

  .journal-filters {
    display: flex;
    gap: 40px;
    margin-bottom: 40px;
    border-bottom: 1px solid var(--color-brand-orange2);
    justify-content: center;
  }

  .journal-filter {
    background: none;
    border: none;
    font-size: 1rem;
    cursor: pointer;
    padding: 5px 10px;
    border-bottom: 2px solid transparent;
    transition: color 0.3s ease;
    color: var(--color-brand-orange2);
    font-weight: bold;
  }

  .journal-filter.active {
    color: var(--color-brand-cream);
  }

  .journal-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 60px;
  }

  .journal-card {
    background: var(--color-brand-brown2);
    border-radius: 4px;
    overflow: hidden;
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .journal-card:hover {
    transform: translateY(-5px);
  }

  .journal-card__image {
    aspect-ratio: 4/5;
    overflow: hidden;
  }

  .journal-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .journal-card__content {
    padding: 25px;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .journal-card__title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 15px;
    color: var(--color-brand-cream);
  }

  .journal-card__meta {
    font-size: 14px;
    margin-bottom: 15px;
    margin-top: auto;
  }

  .journal-card__excerpt {
    font-size: 14px;
    margin-bottom: 15px;
  }

  .journal-card.hidden {
    display: none;
  }
{% endstyle %}

{% paginate blog.articles by section.settings.limit %}
  <div class="journal-page">
    <div class="journal-container">
      <!-- Header -->
      <div class="journal-header">
        <h1 class="journal-title">Journal</h1>
        <p class="journal-subtitle">{{ blog.title }}</p>
      </div>

      {% if blog.articles.size > 0 %}
        <!-- Featured Article -->
        {% assign featured_article = blog.articles.first %}
        <div class="journal-featured">
          <div class="journal-featured__image">
            {% if featured_article.image %}
              <img
                src="{{ featured_article.image | image_url: width: 600 }}"
                alt="{{ featured_article.image.alt | escape }}"
                width="600"
                height="750"
                loading="lazy"
              >
            {% else %}
              {{ 'collection-6' | placeholder_svg_tag: 'placeholder' }}
            {% endif %}
          </div>
          <div class="journal-featured__content">
            <h2 class="journal-featured__title">{{ featured_article.title }}</h2>
            <div class="journal-featured__meta">Author • {{ featured_article.published_at | date: '%d.%m.%Y' }}</div>
            <div class="journal-featured__excerpt">
              {{ featured_article.excerpt | default: featured_article.content | strip_html | truncate: 300 }}
            </div>
            <div class="journal-featured__read-more">
              {% render 'icon-button',
                icon: 'blog.svg',
                label: 'Read More',
                url: featured_article.url,
                variant: 'secondary'
              %}
            </div>
          </div>
        </div>

        <!-- Filters -->
        <div class="journal-filters">
          <button class="journal-filter active" data-filter="all">All</button>
          {% assign all_tags = blog.all_tags %}
          {% for tag in all_tags %}
            <button class="journal-filter" data-filter="{{ tag | handle }}">{{ tag }}</button>
          {% endfor %}
        </div>

        <!-- Articles Grid -->
        <div class="journal-grid">
          {% for article in blog.articles %}
            <div
              class="journal-card"
              data-tags="{% for tag in article.tags %}{{ tag | handle }}{% unless forloop.last %} {% endunless %}{% endfor %}"
            >
              <div class="journal-card__image">
                {% if article.image %}
                  <img
                    src="{{ article.image | image_url: width: 400 }}"
                    alt="{{ article.image.alt | escape }}"
                    width="400"
                    height="500"
                    loading="lazy"
                  >
                {% else %}
                  {{ 'collection-6' | placeholder_svg_tag: 'placeholder' }}
                {% endif %}
              </div>
              <div class="journal-card__content">
                <h3 class="journal-card__title">{{ article.title }}</h3>
                <div class="journal-card__meta">Author • {{ article.published_at | date: '%d.%m.%Y' }}</div>
                <div class="journal-card__excerpt">
                  {{ article.excerpt | default: article.content | strip_html | truncate: 120 }}
                </div>
                <div class="journal-card__read-more">
                  {% render 'icon-button',
                    icon: 'blog.svg',
                    label: 'Read More',
                    url: article.url,
                    variant: 'secondary'
                  %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

      {% else %}
        <div style="text-align: center; padding: 60px 0;">
          <h2 style="margin-bottom: 20px;">No articles yet</h2>
          <p style="opacity: 0.7;">Check back soon for our latest journal entries.</p>
        </div>
      {% endif %}
    </div>
  </div>
{% endpaginate %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const filterButtons = document.querySelectorAll('.journal-filter');
    const articleCards = document.querySelectorAll('.journal-card');

    filterButtons.forEach((button) => {
      button.addEventListener('click', function () {
        const filterValue = this.getAttribute('data-filter');

        // Update active button
        filterButtons.forEach((btn) => btn.classList.remove('active'));
        this.classList.add('active');

        // Filter articles
        articleCards.forEach((card) => {
          const cardTags = card.getAttribute('data-tags') || '';

          if (filterValue === 'all') {
            card.classList.remove('hidden');
          } else {
            if (cardTags.includes(filterValue)) {
              card.classList.remove('hidden');
            } else {
              card.classList.add('hidden');
            }
          }
        });
      });
    });
  });
</script>

{% schema %}
{
  "name": "Blog",
  "tag": "section",
  "class": "blog-products-section",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "range",
      "id": "limit",
      "label": "Limit",
      "info": "Limit the number of articles displayed per page.",
      "min": 4,
      "max": 50,
      "step": 1,
      "default": 24
    },
    {
      "type": "range",
      "id": "articles_per_row",
      "label": "Articles Per Row",
      "info": "Number of articles per row.",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    }
  ]
}
{% endschema %}
