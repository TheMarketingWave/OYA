{% comment %}
  Cart Sidepanel Content Section
  This section is used for AJAX updates of the cart sidepanel
{% endcomment %}

<div class="cart-sidepanel__items" data-cart-title="{{ section.settings.cart_title }}">
  {% if cart.item_count > 0 %}
    {% for item in cart.items %}
      <div class="cart-item" data-cart-item="{{ item.key }}">
        <div class="cart-item__image">
          <a href="{{ item.url }}">
            <img src="{{ item.image | image_url: width: 80 }}" alt="{{ item.title }}" width="80" height="80">
          </a>
        </div>
        <div class="cart-item__details">
          <h3>
            <a href="{{ item.url }}">{{ item.product.title }}</a>
          </h3>

          <div class="cart-item__quantity">
            <button data-cart-quantity-minus="{{ item.key }}">-</button>
            <span>{{ item.quantity }}</span>
            <button data-cart-quantity-plus="{{ item.key }}">+</button>
          </div>
        </div>
        <div class="cart-item__actions">
          <div class="cart-item__price">{{ item.final_line_price | money }}</div>
          <button data-cart-remove="{{ item.key }}">{{ section.settings.remove_label }}</button>
        </div>
      </div>
    {% endfor %}

    <div class="cart-sidepanel__footer">
      <div class="cart-total">{{ section.settings.total_label }}: {{ cart.total_price | money }}</div>

      <button class="btn btn--primary" data-cart-checkout>{{ section.settings.checkout_label }}</button>
    </div>
  {% else %}
    <p>{{ section.settings.empty_cart_message }}</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Cart Sidepanel Content",
  "settings": [
    {
      "type": "header",
      "content": "Cart Labels"
    },
    {
      "type": "text",
      "id": "cart_title",
      "label": "Cart Title",
      "default": "Your Cart"
    },
    {
      "type": "text",
      "id": "remove_label",
      "label": "Remove Button Label",
      "default": "Remove"
    },
    {
      "type": "text",
      "id": "total_label",
      "label": "Total Label",
      "default": "Total"
    },
    {
      "type": "text",
      "id": "checkout_label",
      "label": "Checkout Button Label",
      "default": "Checkout"
    },
    {
      "type": "text",
      "id": "empty_cart_message",
      "label": "Empty Cart Message",
      "default": "Your cart is empty"
    }
  ]
}
{% endschema %}
