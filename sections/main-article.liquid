{% liquid
  assign image_width = 800
  assign image_height = image_width | divided_by: article.image.aspect_ratio | ceil
%}

{% style %}
  .article-page {
    color: var(--color-brand-cream);
    min-height: 100dvh;
    padding: 40px 20px;
  }

  .article-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .article-header {
    text-align: center;
    margin-bottom: 48px;
    padding-bottom: 24px;
    border-bottom: 1px solid var(--color-brand-orange2);
  }

  .article-title {
    font-size: 40px;
    font-weight: bold;
    margin-bottom: 20px;
    font-family: 'Playfair Display', serif;
    color: var(--color-brand-cream);
    line-height: 1.2;
  }

  .article-meta {
    font-size: 14px;
    color: var(--color-brand-orange2);
    margin-bottom: 16px;
  }

  .article-meta a {
    color: var(--color-brand-orange);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .article-meta a:hover {
    color: var(--color-brand-cream);
  }

  .article-tags {
    display: flex;
    gap: 8px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .article-tag {
    background: var(--color-brand-brown2);
    color: var(--color-brand-cream);
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 12px;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .article-tag:hover {
    background: var(--color-brand-orange);
    color: white;
  }

  .article-image {
    margin: 40px 0;
    border-radius: 8px;
    overflow: hidden;
  }

  .article-image img {
    width: 100%;
    height: auto;
    aspect-ratio: 16/9;
    object-fit: cover;
  }

  .article-content {
    font-size: 16px;
    line-height: 1.7;
    color: var(--color-brand-cream);
  }

  .article-content h1,
  .article-content h2,
  .article-content h3,
  .article-content h4,
  .article-content h5,
  .article-content h6 {
    font-family: 'Playfair Display', serif;
    color: var(--color-brand-cream);
    margin: 32px 0 16px 0;
    font-weight: bold;
  }

  .article-content h1 {
    font-size: 32px;
  }
  .article-content h2 {
    font-size: 28px;
  }
  .article-content h3 {
    font-size: 24px;
  }
  .article-content h4 {
    font-size: 20px;
  }

  .article-content p {
    margin-bottom: 16px;
  }

  .article-content a {
    color: var(--color-brand-orange);
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .article-content a:hover {
    color: var(--color-brand-cream);
  }

  .article-content ul,
  .article-content ol {
    margin: 16px 0;
    padding-left: 24px;
  }

  .article-content li {
    margin-bottom: 8px;
  }

  .article-content blockquote {
    background: var(--color-brand-brown2);
    border-left: 4px solid var(--color-brand-orange);
    padding: 20px;
    margin: 24px 0;
    border-radius: 4px;
    font-style: italic;
  }

  .comments-section {
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid var(--color-brand-orange2);
  }

  .comments-title {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 32px;
    font-family: 'Playfair Display', serif;
    color: var(--color-brand-cream);
  }

  .comments-list {
    list-style: none;
    padding: 0;
    margin: 0 0 40px 0;
  }

  .comments-list li {
    background: var(--color-brand-brown2);
    border-radius: 8px;
    padding: 24px;
    margin-bottom: 20px;
  }

  .comment-author {
    background: var(--color-brand-orange);
    color: white;
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 14px;
    font-weight: bold;
    display: inline-block;
    margin-bottom: 8px;
  }

  .comment-date {
    font-size: 12px;
    color: var(--color-brand-orange2);
    margin-bottom: 16px;
  }

  .comment-content {
    color: var(--color-brand-cream);
    line-height: 1.6;
  }

  .comment-form {
    background: var(--color-brand-brown2);
    padding: 32px;
    border-radius: 8px;
    margin-top: 32px;
  }

  .comment-form h2 {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 24px;
    font-family: 'Playfair Display', serif;
    color: var(--color-brand-cream);
  }

  .form-row {
    margin-bottom: 20px;
  }

  .form-row label {
    display: block;
    margin-bottom: 8px;
    color: var(--color-brand-cream);
    font-weight: 500;
  }

  .form-row input,
  .form-row textarea {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid var(--color-brand-orange2);
    border-radius: 4px;
    background: var(--color-brand-brown);
    color: var(--color-brand-cream);
    font-family: inherit;
    transition: border-color 0.3s ease;
  }

  .form-row input:focus,
  .form-row textarea:focus {
    outline: none;
    border-color: var(--color-brand-orange);
  }

  .form-row textarea {
    min-height: 120px;
    resize: vertical;
  }

  .comment-button {
    background: var(--color-brand-green);
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 4px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .comment-button:hover {
    background: var(--color-brand-orange);
  }

  .form-errors {
    background: #ff4444;
    color: white;
    padding: 16px;
    border-radius: 4px;
    margin-bottom: 20px;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .article-page {
      padding: 20px 16px;
    }

    .article-title {
      font-size: 32px;
    }

    .article-content h1 {
      font-size: 28px;
    }
    .article-content h2 {
      font-size: 24px;
    }
    .article-content h3 {
      font-size: 20px;
    }

    .comment-form {
      padding: 24px 20px;
    }
  }
{% endstyle %}

<div class="article-page">
  <div class="article-container">
    <!-- Article Header -->
    <div class="article-header">
      <h1 class="article-title">{{ article.title }}</h1>
      <div class="article-meta">
        Published on {{ article.published_at | date: '%B %d, %Y' }} by {{ article.user.name }}
      </div>
      {% unless article.tags.size == 0 %}
        <div class="article-tags">
          {% for tag in article.tags %}
            <a href="{{ blog.url }}/tagged/{{ tag | handleize }}" class="article-tag">{{ tag }}</a>
          {% endfor %}
        </div>
      {% endunless %}
    </div>

    <!-- Article Image -->
    {% unless article.image.src == blank %}
      <div class="article-image">
        <img
          src="{{ article.image.src | image_url: width: image_width }}"
          width="{{ image_width }}"
          height="{{ image_height }}"
          alt="{{ article.image.alt }}"
          loading="lazy"
        >
      </div>
    {% endunless %}

    <!-- Article Content -->
    <div class="article-content rte">
      {{ article.content }}
    </div>

    {% if article.comments_enabled? %}
      <!-- Comments Section -->
      <section class="comments-section">
        {% capture comments_heading %}
          {% if article.comments_count > 0 %}
            {{ article.comments_count }}
          {% endif %}
          Comments
        {% endcapture %}

        <h2 class="comments-title">{{ comments_heading }}</h2>

        {% if article.comments.size == 0 %}
          <p style="color: var(--color-brand-orange2); text-align: center; padding: 20px;">
            No comments yet. Be the first to share your thoughts!
          </p>
        {% endif %}

        {% paginate article.comments by 25 %}
          {% if article.comments.size > 0 %}
            <ol class="comments-list">
              {% for comment in article.comments %}
                <li>
                  <div class="comment-author">{{ comment.author }}</div>
                  <div class="comment-date">{{ comment.created_at | date: '%B %d, %Y at %I:%M %p' }}</div>
                  <div class="comment-content">{{ comment.content }}</div>
                </li>
              {% endfor %}
            </ol>
          {% endif %}

          {% render 'pagination', paginate: paginate %}
        {% endpaginate %}

        <!-- Comment Form -->
        <div class="comment-form">
          <h2>Leave a Comment</h2>
          {% form 'new_comment', article %}
            {% if form.errors %}
              <div class="form-errors">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="form-row">
              <label for="comment_author">Name</label>
              <input type="text" id="comment_author" name="comment[author]" value="{{ form.author }}" required>
            </div>

            <div class="form-row">
              <label for="comment_email">Email (not published)</label>
              <input type="email" id="comment_email" name="comment[email]" value="{{ form.email }}" required>
            </div>

            <div class="form-row">
              <label for="comment_body">Comment</label>
              <textarea id="comment_body" name="comment[body]" required>{{ form.body }}</textarea>
            </div>

            <div class="form-row">
              <button type="submit" class="comment-button">Post Comment</button>
            </div>
          {% endform %}
        </div>
      </section>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Article",
  "settings": [
    {
      "type": "number",
      "id": "max_width",
      "label": "Max page width (px)",
      "info": "Leave blank for default.",
      "default": 768
    }
  ]
}
{% endschema %}
