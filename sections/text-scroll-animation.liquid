{% style %}
  .text-scroll-animation {
    padding: 100px 20px;
    text-align: center;
    width: 100%;
    margin: 0 auto;
    color: var(--color-brand-cream);
    display: flex;
    flex-direction: column;
    gap: 60px;
  }

  .text-scroll-animation__title {
    font-size: 48px;
    font-weight: 600;
  }

  .text-scroll-animation__content {
    font-size: 28px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .text-scroll-animation__cta {
    background: #333;
    color: white;
    padding: 12px 24px;
    text-decoration: none;
    border-radius: 4px;
    align-self: center;
  }

  .text-scroll-animation__content__word {
    opacity: 0.1;
  }

  .text-scroll-animation .icon-button {
    align-self: center;
    /* border: 1px solid var(--color-brand-cream); */
    font-weight: bold;
  }
{% endstyle %}

<div class="text-scroll-animation">
  {% if section.settings.title != blank %}
    <h2 class="text-scroll-animation__title title-font">{{ section.settings.title }}</h2>
  {% endif %}

  {% if section.settings.content != blank %}
    <div class="text-scroll-animation__content">
      {{ section.settings.content | escape }}
    </div>
  {% endif %}

  {% if section.settings.cta_text != blank %}
    {% render 'icon-button', icon: 'drop.svg', label: section.settings.cta_text %}
  {% endif %}
</div>

{% schema %}
{
  "name": "Text Scroll Animation",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Scroll Animation Title"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "This is the content area for your scroll animation section. You can add your text here and it will be displayed with proper styling."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call to Action Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Call to Action URL",
      "info": "Where the CTA button should link to"
    }
  ],
  "presets": [
    {
      "name": "Text Scroll Animation"
    }
  ]
}
{% endschema %}
