{% style %}
  .card-section {
    width: 100%;
    padding: 80px 20px;
    position: relative;
    z-index: 1;
  }

  .card-section__container {
    max-width: 550px;
    margin: 0 auto;
  }

  .card-section__header {
    text-align: center;
    margin-bottom: 60px;
    gap: 20px;
    display: flex;
    flex-direction: column;
  }

  .card-section__title {
    font-size: 48px;
    font-weight: bold;
    color: var(--color-brand-cream);
  }

  .card-section__subtitle {
    font-size: 16px;
    color: var(--color-brand-cream);
    margin: 0 auto;
  }

  .card-section__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
  }

  .card {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .card__icon {
    margin-top: 4px;
  }

  .card__title {
    display: flex;
    /* align-items: center; */
    gap: 12px;
    font-size: 24px;
    font-weight: bold;
    color: var(--color-brand-cream);
  }

  .card__content {
    font-size: 16px;
    color: var(--color-brand-cream);
    padding-left: 33px;
  }

  .card-move-left {
    transform: translateX(-75%);
  }

  .card-move-right {
    transform: translateX(75%);
  }

  /* Initial state for animation */
  .card {
    opacity: 0;
    filter: blur(10px);
  }

  @media (max-width: 480px) {
    .card-section__header {
      margin-bottom: 20px;
      gap: 5px;
    }

    .card-section__grid {
      grid-template-columns: 1fr;
    }

    .card-section__grid .card-move-right,
    .card-section__grid .card-move-left {
      transform: none;
    }
  }
{% endstyle %}

<section class="card-section">
  <div class="card-section__container">
    {% if section.settings.section_title != blank or section.settings.section_subtitle != blank %}
      <div class="card-section__header">
        {% if section.settings.section_title != blank %}
          <h2 class="card-section__title title-font">{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.section_subtitle != blank %}
          <p class="card-section__subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="card-section__grid">
      {% for block in section.blocks %}
        {% liquid
          assign index = forloop.index0
          assign pair_index = index | divided_by: 2
          assign is_even_pair = pair_index | modulo: 2
          if is_even_pair == 0
            assign movement_class = 'card-move-left'
          else
            assign movement_class = 'card-move-right'
          endif
        %}
        <div class="card {{ movement_class }}">
          <div class="card__header">
            <h3 class="card__title">
              {% if block.settings.icon != blank %}
                {% render 'icon', icon: block.settings.icon, class: 'card__icon', size: '25' %}
              {% endif %}
              {{ block.settings.title }}
            </h3>
          </div>
          <div class="card__content">
            {{ block.settings.content }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Values Card",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Our Values",
      "info": "Main heading for the section"
    },
    {
      "type": "textarea",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "The principles that guide every decision we make",
      "info": "Descriptive text below the section title"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Card Title",
          "default": "Card Title"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "", "label": "No Icon" },
            { "value": "star", "label": "Star" },
            { "value": "flower", "label": "Flower" },
            { "value": "moon", "label": "Moon" },
            { "value": "sun", "label": "Sun" },
            { "value": "heart", "label": "Heart" },
            { "value": "check", "label": "Check" },
            { "value": "arrow-right", "label": "Arrow Right" },
            { "value": "play", "label": "Play" },
            { "value": "phone", "label": "Phone" },
            { "value": "email", "label": "Email" },
            { "value": "location", "label": "Location" },
            { "value": "refreshener", "label": "Refreshener" },
            { "value": "diamond", "label": "Diamond" },
            { "value": "flower2", "label": "Flower2" },
            { "value": "spa", "label": "Spa" }
          ]
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Card Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Values Card",
      "blocks": [
        {
          "type": "card",
          "settings": {
            "title": "Example Card",
            "icon": "star",
            "content": "This is an example card with an icon."
          }
        }
      ]
    }
  ]
}
{% endschema %}
