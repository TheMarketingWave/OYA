{% style %}
  .password-page {
    min-height: 100dvh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-brand-cream, #f5f3f0);
    padding: 40px 20px;
  }

  .password-container {
    max-width: 500px;
    width: 100%;
    text-align: center;
    background: white;
    padding: 60px 40px;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(139, 69, 19, 0.1);
  }

  .password-logo {
    margin-bottom: 40px;
  }

  .password-logo img {
    height: 60px;
    width: auto;
  }

  .password-title {
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem;
    color: var(--color-brand-brown, #8b4513);
    margin-bottom: 10px;
    font-weight: 400;
  }

  .password-subtitle {
    font-size: 1.1rem;
    color: rgba(139, 69, 19, 0.7);
    margin-bottom: 40px;
    line-height: 1.5;
  }

  .password-form {
    margin-bottom: 30px;
  }

  .password-form .form-row {
    margin-bottom: 20px;
  }

  .password-form label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: var(--color-brand-brown, #8b4513);
    text-align: left;
  }

  .password-form input[type='password'] {
    width: 100%;
    padding: 15px 20px;
    border: 2px solid rgba(139, 69, 19, 0.2);
    border-radius: 8px;
    font-size: 1rem;
    background: var(--color-brand-cream, #f5f3f0);
    color: var(--color-brand-brown, #8b4513);
    transition: border-color 0.2s ease;
  }

  .password-form input[type='password']:focus {
    outline: none;
    border-color: var(--color-brand-brown, #8b4513);
  }

  .password-form button {
    width: 100%;
    background: var(--color-brand-brown, #8b4513);
    color: var(--color-brand-cream, #f5f3f0);
    border: none;
    padding: 15px 30px;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .password-form button:hover {
    opacity: 0.9;
  }

  .password-errors {
    background: #fee;
    border: 1px solid #fcc;
    color: #c66;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    font-size: 0.9rem;
  }

  .password-footer {
    padding-top: 30px;
    border-top: 1px solid rgba(139, 69, 19, 0.1);
    margin-top: 30px;
  }

  .password-footer p {
    margin: 0;
    font-size: 0.9rem;
    color: rgba(139, 69, 19, 0.6);
  }

  .password-footer a {
    color: var(--color-brand-brown, #8b4513);
    text-decoration: none;
    font-weight: 500;
  }

  .password-footer a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .password-container {
      padding: 40px 30px;
    }

    .password-title {
      font-size: 2rem;
    }

    .password-subtitle {
      font-size: 1rem;
    }
  }
{% endstyle %}

<div class="password-page">
  <div class="password-container">
    <div class="password-logo">
      <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" width="auto" height="60">
    </div>

    <h1 class="password-title">{{ shop.name }}</h1>
    <p class="password-subtitle">We're preparing something special. Enter the password to get an exclusive preview.</p>

    {%- form 'storefront_password', class: 'password-form' -%}
      {% if form.errors %}
        <div class="password-errors">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="form-row">
        <label for="password">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Enter store password"
          autofocus
        >
      </div>

      <div class="form-row">
        <button type="submit" name="commit">Enter Store</button>
      </div>
    {%- endform -%}

    <div class="password-footer">
      <p>Store owner? <a href="/admin" target="_blank">Log in here</a></p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Password Page",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "We're preparing something special. Enter the password to get an exclusive preview."
    }
  ]
}
{% endschema %}
