{% stylesheet %}
  .responsive-video-section {
    position: relative;
    width: 100vw;
    height: 100vh;
    max-height: 600px;
    overflow: hidden;
  }

  .responsive-video-desktop {
    width: 100%;
    height: 100%;
  }

  .responsive-video-desktop video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
{% endstylesheet %}

<div class="responsive-video-section">
  <!-- Desktop Video (Landscape) -->
  <div class="responsive-video-desktop">
    {% if section.settings.desktop_video.id != blank %}
      {{ section.settings.desktop_video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Responsive Video",
  "tag": "section",
  "class": "responsive-video-section",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Video Settings"
    },
    {
      "type": "video",
      "id": "desktop_video",
      "label": "Desktop Video (Landscape)",
      "info": "Upload a landscape video for desktop screens (16:9 or 3:2 aspect ratio recommended)"
    },
    {
      "type": "video",
      "id": "mobile_video",
      "label": "Mobile Video (Portrait)",
      "info": "Upload a portrait video for mobile screens (9:16 or 2:3 aspect ratio recommended)"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Text",
          "default": "Headline"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Size",
          "options": [
            {
              "value": "h1",
              "label": "H1"
            },
            {
              "value": "h2",
              "label": "H2"
            },
            {
              "value": "h3",
              "label": "H3"
            }
          ],
          "default": "h2"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Add your compelling text here to overlay on the video background.</p>",
          "label": "Text"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "Buttons",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Learn More",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Responsive Video",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "buttons"
        }
      ]
    }
  ]
}
{% endschema %}
