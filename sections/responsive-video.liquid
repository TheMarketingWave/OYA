{% stylesheet %}
  .responsive-video-section {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  .responsive-video-desktop,
  .responsive-video-mobile {
    width: 100%;
    height: 100%;
  }

  .responsive-video-desktop video,
  .responsive-video-mobile video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Show desktop video on larger screens */
  .responsive-video-desktop {
    display: block;
  }

  .responsive-video-mobile {
    display: none;
  }

  .vignette-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at center,
      transparent 30%,
      rgba(31, 21, 24, 0.3) 60%,
      rgba(31, 21, 24, 0.9) 100%
    );
    z-index: 5;
    pointer-events: none;
  }

  @keyframes blurToClear {
    0% {
      filter: blur(10px);
      opacity: 0;
    }

    100% {
      filter: blur(0px);
      opacity: 1;
    }
  }

  @keyframes bounceArrow {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(8px);
    }
  }

  .video-heading {
    position: absolute;
    bottom: 50px;
    left: 50%;
    transform: translateX(-50%);
    color: var(--color-brand-cream);
    font-weight: 100;
    text-align: center;
    font-size: 60px;
    filter: blur(10px);
    animation: blurToClear 2s ease forwards;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }

  .scroll-down-button {
    background: transparent;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50px;
    width: 40px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .scroll-down-button:hover {
    border-color: rgba(255, 255, 255, 0.6);
    background: rgba(255, 255, 255, 0.1);
  }

  .scroll-down-button svg {
    animation: bounceArrow 3s ease-in-out infinite;
    transition: transform 0.3s ease;
  }

  .scroll-down-button:hover svg {
    animation-play-state: paused;
    transform: translateY(2px);
  }

  /* Show mobile video on smaller screens */
  @media screen and (max-width: 768px) {
    .responsive-video-desktop {
      display: none;
    }

    .responsive-video-mobile {
      display: block;
    }

    .video-heading {
      font-size: 32px;
      bottom: 30px;
      gap: 15px;
    }
  }
{% endstylesheet %}

<div class="responsive-video-section">
  <!-- Desktop Video (Landscape) -->
  <div class="responsive-video-desktop">
    {% if section.settings.desktop_video.id != blank %}
      {{ section.settings.desktop_video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
    {% endif %}
  </div>

  <!-- Mobile Video (Portrait) -->
  <div class="responsive-video-mobile">
    {% if section.settings.mobile_video.id != blank %}
      {{ section.settings.mobile_video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
    {% endif %}
  </div>

  <!-- Vignette Overlay -->
  <div class="vignette-overlay"></div>

  <!-- Video Heading Overlay -->
  {% if section.settings.heading_text != blank %}
    <div class="video-heading">
      <h3 class=" title-font ">{{ section.settings.heading_text | newline_to_br }}</h3>

      <!-- Scroll Down Button -->
      <button class="scroll-down-button" onclick="scrollDown()">
        <svg xmlns="http://www.w3.org/2000/svg" width="12" height="18" viewBox="0 0 12 18" fill="none">
          <path d="M5.99999 17.3333L0.166656 11.5L1.33332 10.3333L5.16666 14.1458V0.666672H6.83332V14.1458L10.6667 10.3125L11.8333 11.5L5.99999 17.3333Z" fill="#e0d9ba"/>
        </svg>
      </button>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Responsive Video",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Video Settings"
    },
    {
      "type": "video",
      "id": "desktop_video",
      "label": "Desktop Video (Landscape)",
      "info": "Upload a landscape video for desktop screens (16:9 or 3:2 aspect ratio recommended)"
    },
    {
      "type": "video",
      "id": "mobile_video",
      "label": "Mobile Video (Portrait)",
      "info": "Upload a portrait video for mobile screens (9:16 or 2:3 aspect ratio recommended)"
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "textarea",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Your text",
      "info": "Text that will appear as an overlay on the video. Use line breaks for multiple lines."
    }
  ],
  "presets": [
    {
      "name": "Responsive Video",
      "settings": {
        "heading_text": "Your text"
      }
    }
  ]
}
{% endschema %}
