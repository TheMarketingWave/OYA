{% stylesheet %}
  .responsive-video-section {
    position: relative;
    width: 100%;
    height: 100vh;
    max-height: 600px;
    overflow: hidden;
  }

  .responsive-video-section video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .responsive-video-desktop {
    display: block;
  }

  .responsive-video-mobile {
    display: none;
  }

  @media screen and (max-width: 768px) {
    .responsive-video-desktop {
      display: none;
    }

    .responsive-video-mobile {
      display: block;
    }
  }

  .responsive-video-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 5;
    padding: 2rem;
    text-align: center;
    color: white;
    background-color: rgba(0, 0, 0, 0.3);
  }

  .responsive-video-content h1,
  .responsive-video-content h2,
  .responsive-video-content h3 {
    color: white;
    margin-bottom: 1rem;
  }

  .responsive-video-content p {
    color: white;
    margin-bottom: 1.5rem;
    max-width: 600px;
  }

  .responsive-video-content .button {
    background-color: white;
    color: black;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .responsive-video-content .button:hover {
    background-color: #f0f0f0;
    transform: translateY(-2px);
  }
{% endstylesheet %}

<div class="responsive-video-section">
  <!-- Desktop Video (Landscape) -->
  <div class="responsive-video-desktop">
    {% if section.settings.desktop_video != blank %}
      <video
        autoplay
        muted
        loop
        playsinline
      >
        <source src="{{ section.settings.desktop_video | asset_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder' }}
    {% endif %}
  </div>

  <!-- Mobile Video (Portrait) -->
  <div class="responsive-video-mobile">
    {% if section.settings.mobile_video != blank %}
      <video
        autoplay
        muted
        loop
        playsinline
      >
        <source src="{{ section.settings.mobile_video | asset_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% elsif section.settings.desktop_video != blank %}
      <!-- Fallback to desktop video if mobile video is not set -->
      <video
        autoplay
        muted
        loop
        playsinline
      >
        <source src="{{ section.settings.desktop_video | asset_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder' }}
    {% endif %}
  </div>

  <!-- Content Overlay -->
  <div class="responsive-video-content">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'heading' -%}
          <{{ block.settings.size }} data-title="{{ block.settings.text }}">
            {{- block.settings.text -}}
          </{{ block.settings.size }}>
        {%- when 'text' -%}
          <div class="rte">
            {{ block.settings.text }}
          </div>
        {% when 'buttons' %}
          <p>
            <a class="button" href="{{ block.settings.button_link | default: '#' }}">
              {{ block.settings.button_label }}
            </a>
          </p>
      {% endcase %}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Responsive Video",
  "tag": "section",
  "class": "responsive-video-section",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Video Settings"
    },
    {
      "type": "video",
      "id": "desktop_video",
      "label": "Desktop Video (Landscape)",
      "info": "Upload a landscape video for desktop screens (16:9 or 3:2 aspect ratio recommended)"
    },
    {
      "type": "video",
      "id": "mobile_video",
      "label": "Mobile Video (Portrait)",
      "info": "Upload a portrait video for mobile screens (9:16 or 2:3 aspect ratio recommended)"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Text",
          "default": "Headline"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Size",
          "options": [
            {
              "value": "h1",
              "label": "H1"
            },
            {
              "value": "h2",
              "label": "H2"
            },
            {
              "value": "h3",
              "label": "H3"
            }
          ],
          "default": "h2"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Add your compelling text here to overlay on the video background.</p>",
          "label": "Text"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "Buttons",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Learn More",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Responsive Video",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "buttons"
        }
      ]
    }
  ]
}
{% endschema %}
