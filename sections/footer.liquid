{% style %}
  .footer {
    color: var(--color-brand-cream);
    padding: 40px 20px;
    background: var(--color-brand-brown2);
  }

  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    gap: 60px;
  }

  .footer__logo {
    flex-shrink: 0;
    width: 185px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .footer__navigation {
    display: flex;
    gap: 40px;
    flex: 1;
  }

  .footer__nav-column {
    flex: 1;
  }

  .footer__nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .footer__nav-link {
    color: var(--color-brand-cream);
    text-decoration: none;
    font-size: 16px;
    transition: opacity 0.3s ease;
  }

  .footer__nav-link:hover {
    opacity: 0.7;
  }

  .footer__content {
    flex: 1;
    max-width: 400px;
    border-left: 1px solid var(--color-brand-cream);
    padding-left: 40px;
  }

  .footer__description {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 24px;
  }

  .footer__social {
    display: flex;
    gap: 16px;
  }

  .footer__social-link {
    width: 40px;
    height: 40px;
    background: var(--color-brand-green);
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .footer__social-link:hover {
    opacity: 0.8;
  }

  .footer__social-icon {
    width: 20px;
    height: 20px;
  }

  .footer__powered-container {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .footer__powered-container img {
    flex-shrink: 0;
  }

  .footer__powered {
    font-size: 16px;
    color: white;
    text-align: right;
    width: 150px;
  }
{% endstyle %}

<footer class="footer">
  <div class="footer__container">
    <div class="footer__logo">
      <img src="{{ 'logo_small.png' | asset_url }}" alt="Logo" width="200px" height="auto">
    </div>
    <div class="footer__navigation">
      <!-- Column 1 -->
      <div class="footer__nav-column">
        <ul class="footer__nav-list">
          <li><a href="{{ routes.root_url }}" class="footer__nav-link">Home</a></li>
          <li><a href="{{ routes.collections_url }}" class="footer__nav-link">Collection</a></li>
          <li><a href="/pages/our-story" class="footer__nav-link">Our story</a></li>
          <li><a href="/blogs/news" class="footer__nav-link">Journal</a></li>
          <li><a href="/pages/contact" class="footer__nav-link">Contact Us</a></li>
        </ul>
      </div>

      <!-- Column 2 -->
      <div class="footer__nav-column">
        <ul class="footer__nav-list">
          <li><a href="/pages/terms-and-conditions" class="footer__nav-link">Terms and Conditions</a></li>
          <li><a href="/pages/privacy-policy" class="footer__nav-link">Privacy Policy</a></li>
