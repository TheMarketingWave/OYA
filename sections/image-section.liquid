<section class="image-section">
  <div class="image-section__container">
    <div class="image-section__content image-section__content--{{ section.settings.position }}">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url }}"
          alt="{{ section.settings.image.alt | escape }}"
          class="image-section__image{% if section.settings.circular %} image-section__image--circular{% endif %}"
          style="max-width: {{ section.settings.max_width }}px;"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
          loading="lazy"
        >
      {% else %}
        <div class="image-section__placeholder" style="max-width: {{ section.settings.max_width }}px;">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21 19V5C21 3.9 20.1 3 19 3H5C3.9 3 3 3.9 3 5V19C3 20.1 3.9 21 5 21H19C20.1 21 21 20.1 21 19ZM8.5 13.5L11 16.51L14.5 12L19 18H5L8.5 13.5Z" fill="currentColor"/>
          </svg>
          <span>Upload an image</span>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image Section",
  "tag": "section",
  "class": "image-section-wrapper",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "presets": [
    {
      "name": "Image Section"
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "number",
      "id": "max_width",
      "label": "Max Width (px)",
      "default": 500,
      "info": "Maximum width of the image in pixels"
    },
    {
      "type": "checkbox",
      "id": "circular",
      "label": "Make image circular",
      "default": false
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "select",
      "id": "position",
      "label": "Image Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ]
}
{% endschema %}
